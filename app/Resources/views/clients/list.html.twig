{% extends 'base.html.twig' %}
{% block body %}
    <div class="content">
        <table class="table table-striped" id="clients_list">
            <thead>
                <tr class="client_row">
                    <th class="col-md-1">
                        <button type="button" class="btn btn-warning collaps_all"
                                onclick="collaps_all()"
                                title="Collapse All">
                                    <span class="glyphicon glyphicon-eject" aria-hidden="true">
                                    </span>
                        </button>
                    </th>
                    <th class="col-md-2">
                        <div>Codigo</div>
                    </th>
                    <th class="col-md-8">
                        <div class="pull-left">Clientes</div>
                        <div class="pull-right">
                            <input type="text" onkeyup="filter(this)" name="search" id="search" placeholder="Filtro"
                                   class="pull-right"/>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr class="client_row">
                    <td class="col-md-1">
                        <div>
                            {% if client.presupuestos|length > 0 %}
                                <button type="button" class="btn btn-info quotation_collapsable_btn"
                                        data-toggle="collapse"
                                        data-target="#{{ client.id }}"
                                        onclick="collaps_btn(this)">
                                    <span class="glyphicon glyphicon-chevron-down" aria-hidden="true">

                                    </span>
                                </button>
                            {% endif %}
                        </div>
                    </td>
                    <td class="col-md-2">
                        <div >{{ client.id }}</div>
                    </td>
                    <td class="col-md-6">
                        <div>
                            <a href="{{ path('clients_show', {'clientCode': client.id}) }}">{{ client.nombre }}</a>
                        </div>
                        <div class="container collapse col-md-6" id="{{ client.id }}">
                            <div class="col-md-12" style="margin-top: 20px; background: #13e2d0; border-radius: 5px; font-size: 1.2em">
                                    <div class="col-md-12" style="text-align: center; font-weight: bold">
                                        <h4>PRESUPUESTOS</h4>
                                    </div>
                                    <div class="col-md-3 col-md-offset-1">
                                        Numero
                                    </div>
                                    <div class="col-md-3 col-md-offset-1">
                                        Fecha
                                    </div>
                                    <div class="col-md-3 col-md-offset-1">
                                        Importe
                                    </div>
                            </div>
                            {% for presupuesto in client.presupuestos %}
                                <div class="col-md-12" style="margin-top: 10px; font-size: 1.2em">
                                    <div class="col-md-3 col-md-offset-1">
                                        <a href="{{ path('quotations_show', {'number': presupuesto.numero}) }}">{{ presupuesto.numero }}</a>
                                    </div>
                                    <div class="col-md-3 col-md-offset-1">
                                        {{ presupuesto.fecha }}
                                    </div>
                                    <div class="col-md-3 col-md-offset-1">
                                        {{ presupuesto.importe|number_format(2, '.', ',') }} &euro;
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {#Function for filtering lists#}
    <script language="javascript" type="text/javascript">
        function filter(element) {

            var count = 0;
            var value = $(element).val();
            value = value.toUpperCase();
            console.log(value);

            $(".client_row").each(function () {
                text = $(this)
                        .text()
                        .replace(/(\r\n|\n|\r)/gm, "")
                        .toString()
                        .trim()
                        .toUpperCase();
                console.log(text);
                if (text.search(value) > -1) {
                    $(this).show();
                    count++;
                    $("input[name='list_matched']").show();
                }
                else {
                    $(this).hide();
                }
            });


